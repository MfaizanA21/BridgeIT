@page
@model PaymentsModel
@{
    ViewData["Title"] = "Test Payments";
}

<h2>Test Payments</h2>

<form method="post">
    <label for="ProposalId">Proposal ID:</label>
    <input type="text" id="ProposalId" name="ProposalId" required />

    <label for="Amount">Amount:</label>
    <input type="number" id="Amount" name="Amount" required />

    <button type="submit">Create Payment Intent</button>
</form>

@if (!string.IsNullOrEmpty(Model.PaymentIntentId))
{
    <h3>Payment Intent Created</h3>
    <p><strong>PaymentIntent ID:</strong> @Model.PaymentIntentId</p>
    <p><strong>Client Secret:</strong> @Model.PaymentClientSecret</p>
}
